<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jj"
    tools:context=".orderActivity3">

    <ImageView
        android:id="@+id/imagetecno"
        android:layout_width="300dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toTopOf="@+id/textviewtecno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/tecnopova2" />

    <RadioGroup
        android:id="@+id/rgcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/rgstorage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewtecno"
        app:layout_constraintVertical_bias="0.5">

        <RadioButton
            android:id="@+id/rbtnwhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Black" />

        <RadioButton
            android:id="@+id/rbtnblack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gold" />

        <RadioButton
            android:id="@+id/rbtngold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="White" />
    </RadioGroup>


    <RadioGroup
        android:id="@+id/rgstorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btnaddtecno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgcolor"
        app:layout_constraintVertical_bias="0.5">

        <RadioButton
            android:id="@+id/rbtn128gb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="128 GB" />

        <RadioButton
            android:id="@+id/rbtn256gb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="256 GB" />

        <RadioButton
            android:id="@+id/rbtn512gb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="512 GB" />
    </RadioGroup>

    <TextView
        android:id="@+id/textviewtecno"
        android:layout_width="156dp"
        android:layout_height="54dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/rgcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagetecno"
        app:layout_constraintVertical_bias="0.5">

    </TextView>

    <Button
        android:id="@+id/btnaddtecno"
        android:layout_width="180dp"
        android:layout_height="54dp"
        android:backgroundTint="@color/white"
        android:text="Add to cart"
        android:textColor="@color/black"
        android:onClick="btnaddtecno"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgstorage"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>